<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green1"
    android:id="@+id/my_settinglayout"
    tools:context=".SettingActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/settingname"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <TextView
            android:id="@+id/edt_connect"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#3f4d98"
            android:layout_gravity="left"
            android:text="Master volume"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:gravity="left"
            android:background="@drawable/duongvien_goc"
            >
            <SeekBar
                android:id="@+id/volume_bar"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTintMode="multiply"
                android:progressDrawable="@drawable/seekbar_progress"
               />
            <TextView
                android:id="@+id/volume_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008080"
                android:textStyle="bold"
                android:textSize="23sp"
                android:text="75"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/duongvien_goc"
        >

        <ToggleButton
            android:id="@+id/btn_sound"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/toggle_switch"
            android:textOff=""
            android:textOn=""
            />

        <TextView
            android:id="@+id/edt_sound"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="45sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/duongvien_goc"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/btn_music"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/toggle_switch"
            android:textOff=""
            android:textOn=""
            />

        <TextView
            android:id="@+id/edt_music"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/duongvien_goc"
        >

        <ToggleButton
            android:id="@+id/btn_tutorial"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/toggle_switch"
            android:textOff=""
            android:textOn=""
            />

        <TextView
            android:id="@+id/edt_tutorial"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="45sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <Button
            android:id="@+id/cpbhowtp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textColor="#008080"
            android:textSize="20sp"
            android:background="@drawable/buttonstyleselector"
            android:text="How to play"
            />

        <Button
            android:id="@+id/cpbAboutus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="About us"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#008080"
            android:background="@drawable/buttonstyleselector"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/cpbApply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Close"
            android:textStyle="bold"
            android:textColor="#008080"
            android:textSize="25sp"
            android:background="@drawable/buttonstyleselector"
            />
    </LinearLayout>

</LinearLayout>